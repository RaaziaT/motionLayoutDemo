<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".productdetails.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/background" />


    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="@dimen/dimen_dp_40"
        android:layout_height="@dimen/dimen_dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_dp_5"
        android:layout_marginRight="@dimen/dimen_dp_5"
        android:src="@drawable/cross_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView_zapp_man_off"
        android:layout_width="@dimen/dimen_dp_300"
        android:layout_height="@dimen/dimen_dp_900"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dimen_dp_40"
        android:paddingTop="@dimen/dimen_dp_200"
        android:paddingRight="@dimen/dimen_dp_40"
        android:paddingBottom="@dimen/dimen_dp_200"
        android:src="@mipmap/zapp_man_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>