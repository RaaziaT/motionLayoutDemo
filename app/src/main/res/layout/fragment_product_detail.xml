<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/detail_viewpager_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_250"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/detail_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/detail_indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_30"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/detail_favorite"
            android:layout_width="@dimen/dimen_dp_40"
            android:layout_height="@dimen/dimen_dp_40"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dimen_dp_20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/out_of_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/dimen_dp_5"
            android:text="@string/out_of_stock"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="@dimen/dimen_dp_40"
        android:layout_height="@dimen/dimen_dp_40"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dimen_dp_10"
        android:layout_marginBottom="5dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_viewpager_ll">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/detail_quantity_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_100"
                android:layout_margin="@dimen/dimen_dp_10"
                android:layout_marginTop="@dimen/dimen_dp_20"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/detail_remove_item"
                    android:layout_width="@dimen/dimen_dp_50"
                    android:layout_height="@dimen/dimen_dp_50"
                    android:padding="@dimen/dimen_dp_5"
                    android:src="@drawable/ic_plus_circle" />

                <TextView
                    android:id="@+id/detail_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_dp_50"
                    android:layout_marginRight="@dimen/dimen_dp_50"
                    android:text="10"
                    android:textSize="45sp" />

                <ImageView
                    android:id="@+id/detail_add_item"
                    android:layout_width="@dimen/dimen_dp_50"
                    android:layout_height="@dimen/dimen_dp_50"
                    android:padding="@dimen/dimen_dp_8"
                    android:src="@drawable/ic_minus_circle" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/price_detail_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/detail_quantity_ll"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detail_dollar_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_alignTop="@+id/detail_quantity_detail_ll"
                        android:layout_alignBottom="@+id/detail_quantity_detail_ll"
                        android:textSize="@dimen/dimen_sp_35"
                        android:text="10" />

                    <LinearLayout
                        android:id="@+id/detail_quantity_detail_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_dp_10"
                        android:layout_toRightOf="@+id/detail_dollar_amount"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detail_cent_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-10dp"
                            android:padding="@dimen/dimen_dp_3"
                            android:text="10"
                            android:textSize="@dimen/dimen_sp_25" />

                        <TextView
                            android:id="@+id/detail_per_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_sp_25"
                            android:layout_marginTop="-5dp"
                            android:text="/pc" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/detail_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_quantity_detail_ll"
                        android:text="Tesco Potato"
                        android:layout_marginTop="@dimen/dimen_dp_10"
                        android:gravity="center"
                        android:textSize="@dimen/dimen_sp_20" />

                    <TextView
                        android:id="@+id/detail_item_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_item_name"
                        android:gravity="center_horizontal"
                        android:text="Info"
                        android:visibility="gone" />

                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_below="@+id/price_detail_ll"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_sp_20"
                android:textColor="@android:color/black"
                android:padding="@dimen/dimen_sp_18"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>





